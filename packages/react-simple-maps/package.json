{
  "name": "react-iran-maps",
  "version": "0.1.0",
  "private": false,
  "description": "Create powerful React SVG maps of Iran based on d3-geo and topojson.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": "./src/*.tsx"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "iran-map",
    "iran-svg-map",
    "react-map",
    "persian-map",
    "react-maps",
    "react-iran-map",
    "react-iran-maps",
    "react-iran-map-component",
    "iran-choropleth-maps",
    "iran-svg-maps",
    "iran-map-component",
    "react-map-iran"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rezasohrabi/react-iran-maps"
  },
  "author": "YOUR_NAME",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/d3-geo": "^3.1.0",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@types/react-simple-maps": "^3.0.6",
    "@types/topojson-client": "^3.1.5",
    "eslint": "^9.34.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.0.0",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "d3-geo": "^3.1.1",
    "react-simple-maps": "^3.0.0",
    "react-tooltip": "^5.30.0",
    "topojson-client": "^3.1.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  }
}
